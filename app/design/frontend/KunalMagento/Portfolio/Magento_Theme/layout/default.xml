        <!-- Prefer the slim bar area above the logo -->
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template"
                   name="km.topbar"
                   template="Magento_Theme::html/km_topbar.phtml"
                   before="-"/>
        </referenceContainer>

        <!-- If you donâ€™t see it for some reason, switch to page.top as fallback:
